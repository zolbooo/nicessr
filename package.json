{
  "name": "nicessr",
  "version": "2.0.0",
  "description": "ES6-based simple framework for SSR",
  "main": "dist/csr/index.js",
  "types": "dist/csr/index.d.ts",
  "files": [
    "dist",
    "./cli.js"
  ],
  "bin": "./cli.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "test": "npx jest",
    "dev": "NODE_OPTIONS=--enable-source-maps npx tsc-watch --onSuccess 'npm start'",
    "dev:build": "NODE_OPTIONS=--enable-source-maps npx tsc-watch --onSuccess 'node dist/production/index.js'",
    "dev:serve": "NODE_OPTIONS=--enable-source-maps npx tsc-watch --onSuccess 'node dist/production/serve.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zolbooo/nicessr.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "boilerplate",
    "eslint"
  ],
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "author": "Zolboobayar Gantumur <zolboobayar@nhs.edu.mn>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zolbooo/nicessr/issues"
  },
  "homepage": "https://github.com/zolbooo/nicessr#readme",
  "devDependencies": {
    "@nicepack/eslint-ts": "^1.2.3",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@types/webpack": "^4.41.11",
    "eslint": "^6.8.0",
    "jest": "^25.3.0",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/preset-env": "^7.9.5",
    "@babel/types": "^7.9.5",
    "args": "^5.0.1",
    "babel-loader": "^8.1.0",
    "chokidar": "^3.3.1",
    "clean-webpack-plugin": "^3.0.0",
    "css": "^2.2.4",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "file-eval": "^2.0.0",
    "glob": "^7.1.6",
    "lodash.merge": "^4.6.2",
    "node-fetch": "^2.6.0",
    "sha256": "^0.2.0",
    "terser-webpack-plugin": "^2.3.5",
    "webpack": "^5.0.0-beta.14",
    "webpack-inject-plugin": "^1.5.4",
    "webpack-node-externals": "^1.7.2"
  }
}
